<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="rippleColor">@color/blue_500</item>
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textSize">14sp</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/blue_500</item>
        <item name="borderRoundPercent">50</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="PrimaryCardView" parent="CardView">
        <item name="elevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="PrimaryFAB" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@id/square</item>
    </style>

</resources>
